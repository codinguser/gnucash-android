<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/dialog_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/theme_accent"
        android:text="@string/label_assets"/>
    <android.support.v7.widget.CardView
        android:id="@+id/assets_card"
        app:elevation="10dp"
        android:layout_marginBottom="@dimen/edge_padding"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TableLayout android:id="@+id/table_assets"
            android:padding="@dimen/dialog_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/theme_accent"
        android:text="@string/label_liabilities"/>
    <android.support.v7.widget.CardView
        android:id="@+id/liabilities_card"
        app:elevation="10dp"
        android:layout_marginBottom="@dimen/edge_padding"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TableLayout android:id="@+id/table_liabilities"
            android:padding="@dimen/dialog_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/theme_accent"
        android:text="@string/label_equity"/>
    <android.support.v7.widget.CardView
        android:id="@+id/equity_card"
        app:elevation="10dp"
        android:layout_marginBottom="@dimen/edge_padding"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TableLayout android:id="@+id/table_equity"
            android:padding="@dimen/dialog_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_total"
        app:elevation="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TableLayout
            android:padding="@dimen/dialog_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/label_net_worth"/>
                <TextView android:id="@+id/total_liability_and_equity"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="$ 2,500"/>
            </TableRow>
        </TableLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>